<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.noob.controller.MainSceneController">
   <children>
      <TextField fx:id="pathTextField" layoutX="62.0" onAction="#searchDirectory" prefHeight="30.0" prefWidth="540.0" />
      <TreeView fx:id="fileTreeView" layoutY="30.0" onMouseClicked="#selectItem" prefHeight="350.0" prefWidth="400.0" />
      <Label fx:id="curFileNameLabel" alignment="CENTER" layoutX="400.0" layoutY="30.0" prefHeight="25.0" prefWidth="200.0" text="-">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <FlowPane fx:id="curFileTagListPane" layoutX="400.0" layoutY="55.0" prefHeight="225.0" prefWidth="200.0" style="-fx-background-color: yellow;" />
      <Button fx:id="manageButton" layoutX="487.0" layoutY="280.0" mnemonicParsing="false" onAction="#manageFile" text="Manage This File" />
      <Label fx:id="curFileStatusLabel" alignment="CENTER" layoutX="400.0" layoutY="282.0" prefHeight="20.0" prefWidth="85.0" text="-">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ListView fx:id="tagListView" layoutX="600.0" onMouseClicked="#selectTag" prefHeight="350.0" prefWidth="200.0" />
      <TextField fx:id="addTagTextField" layoutX="680.0" layoutY="351.0" onAction="#addTag" prefHeight="25.0" prefWidth="120.0" />
      <Label layoutX="603.0" layoutY="351.0" prefHeight="23.0" prefWidth="76.0" text="Add Tag: " />
      <Button fx:id="upButton" layoutY="-1.0" mnemonicParsing="false" onAction="#upDirectory" prefHeight="30.0" prefWidth="60.0" text="Up" />
      <Button fx:id="relateToTagButton" layoutX="487.0" layoutY="303.0" mnemonicParsing="false" onAction="#curFileRelateToTag" prefHeight="23.0" prefWidth="113.0" text="relate to tag" />
   </children>
</AnchorPane>
